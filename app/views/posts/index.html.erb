<h1>Posts</h1>
<br>
<%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>
<br>
<br>

<hr>
<br>

<% @posts.each do |post| %>
  <div class="card">
    <div class="card-body">
      <div class="col p-4 d-flex flex-column position-static">

      <h3 class="card-title"><%= link_to post.title, post_path(post) %></h3>
      <div class="mb-1 text-muted"><%= post.created_at.strftime('%d.%m.%Y') %></div>
      <p class="card-text"><%= truncate(post.body, length: 60) %></p>
      <strong class="d-inline-block mb-2"><%= post.user.name || 'User' %></strong>

      <%= display_index_post_links(post) %>

      </div>
    </div>
  </div>
<% end %>
</div>
<br>

